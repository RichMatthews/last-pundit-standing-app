{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es2018"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "app/*": ["*"]
      },
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "skipLibCheck": true
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "e2e/**/*.ts"]
  }
  